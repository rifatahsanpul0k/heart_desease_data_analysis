# Production Environment Variables for Heart Disease Prediction App
# Use these for Render, Streamlit Cloud, Railway, or other cloud deployments

# Streamlit Configuration
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=$PORT
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false

# Python Configuration
PYTHONPATH=/app
PYTHON_VERSION=3.11.8

# App Configuration
APP_NAME=heart-disease-predictor
APP_ENVIRONMENT=production
MODEL_FILE=heart_disease_model_optimized.pkl
FEATURE_NAMES_FILE=feature_names.pkl
MODEL_INFO_FILE=model_info.pkl

# Performance Settings
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200
STREAMLIT_SERVER_MAX_MESSAGE_SIZE=200
STREAMLIT_SERVER_ENABLE_STATIC_SERVING=true

# Security Settings (for production)
STREAMLIT_GLOBAL_DEVELOPMENT_MODE=false
STREAMLIT_SERVER_COOKIE_SECRET=your-secret-key-here
