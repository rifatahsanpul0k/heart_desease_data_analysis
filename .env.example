# Environment Variables for Heart Disease Prediction App
# Copy this file to .env and update values as needed

# Streamlit Configuration
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Model Configuration
MODEL_NAME=optimized_xgb_model.pkl
MODEL_ACCURACY_THRESHOLD=0.5
ENABLE_MODEL_CACHING=true

# Heart Disease Prediction App Environment Variables

# App Configuration
APP_TITLE=Heart Disease Risk Predictor
APP_VERSION=1.2.0
MODEL_NAME=heart_disease_model

# Environment Settings
APP_ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=INFO

# Model Configuration
ENABLE_MODEL_CACHING=true
CACHE_TTL_SECONDS=3600
MODEL_ACCURACY_THRESHOLD=0.80

# Performance Settings
MAX_UPLOAD_SIZE_MB=10
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_USERS=100

# Feature Flags
ENABLE_ANALYTICS=false
HEALTH_CHECK_ENDPOINT=/health

# Production Settings (uncomment for production)
# APP_ENVIRONMENT=production
# DEBUG_MODE=false
# LOG_LEVEL=WARNING
# ENABLE_MODEL_CACHING=true
# ENABLE_ANALYTICS=true

# Security (for production)
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=*

# Analytics (optional)
GOOGLE_ANALYTICS_ID=your-ga-id-here
ENABLE_ANALYTICS=false

# Performance
MAX_UPLOAD_SIZE=10
CACHE_TTL=3600
